# - May not need this variable as versioning file
# holds details, but seems to be convention
set(@PROJECT_NAME@_VERSION "@PROJECT_VERSION@")

# - CMakePackageConfigHelpers Startup...
@PACKAGE_INIT@

# - Strictly speaking, do not need include directory
# because the usage requirements for the library will
# add it to clients automatically. However, legacy or tools
# like ROOT may want this path directly, so we set it
set_and_check(@PROJECT_NAME@_INCLUDE_DIR "@PACKAGE_INSTALL_INCLUDEDIR@")
set(@PROJECT_NAME@_INCLUDE_DIRS "${@PROJECT_NAME@_INCLUDE_DIR}")

# - Include targets file
include("${CMAKE_CURRENT_LIST_DIR}/@PROJECT_NAME@Targets.cmake")

# Use C++ Standard as a component, so clients can require a specific
# std/ABI e.g. "find_package(PandoraSDK REQUIRED cxx_std_14)"
set(@PROJECT_NAME@_cxx_std_@CMAKE_CXX_STANDARD@ 1)

# - Components
check_required_components(@PROJECT_NAME@)
